<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/cardview_default_elevation"
    android:layout_marginBottom="@dimen/cardview_default_elevation"
    >

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/material_drawer_item_padding">

        <ImageView
            android:id="@+id/shop_owner_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/shop_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/material_drawer_item_padding"
            android:layout_marginStart="@dimen/material_drawer_item_padding"
            android:layout_toEndOf="@+id/shop_owner_img"
            android:layout_toRightOf="@+id/shop_owner_img"
            android:text="Owner Name"
            android:textColor="@color/material_drawer_primary_text"
            />



        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/shop_date_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="10.10.2017"
            android:textColor="@color/material_drawer_primary_text"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/shop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_date_add"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/material_drawer_item_padding"
            android:layout_centerHorizontal="true"
            android:text="Title"
            android:textColor="@color/material_drawer_primary_text"
            />
        <ImageView
            android:id="@+id/shop_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/material_drawer_item_padding"
            android:adjustViewBounds="true"

            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/shop_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_img"
            android:layout_marginTop="@dimen/material_drawer_item_padding"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Preview"
            android:textColor="@color/material_drawer_primary_text"
            />

        <View
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/shop_preview"
            android:layout_marginTop="@dimen/material_drawer_item_padding"
            android:background="@color/colorCardSeparator"
            />
        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/shop_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/div"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/material_drawer_item_padding"
            style="@style/Widget.MaterialRatingBar.RatingBar.Small"/>
        <com.mikepenz.iconics.view.IconicsTextView
            android:id="@+id/shop_counters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/div"
            android:layout_marginTop="@dimen/material_drawer_item_padding"
            android:textSize="16sp"
            android:text="{faw-comment}100 {faw-heart}100"
            android:textColor="@color/material_drawer_secondary_text"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>