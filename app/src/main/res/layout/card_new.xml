<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    >

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/material_drawer_item_padding">

        <ImageView
            android:id="@+id/new_owner_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:adjustViewBounds="true"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/new_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/material_drawer_item_padding"
            android:layout_marginStart="@dimen/material_drawer_item_padding"
            android:layout_toEndOf="@+id/new_owner_img"
            android:layout_toRightOf="@+id/new_owner_img"
            android:text="Owner Name"
            android:textColor="@color/material_drawer_primary_text"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/new_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/new_owner_name"
            android:layout_alignStart="@+id/new_owner_name"
            android:layout_below="@+id/new_owner_name"
            android:layout_marginTop="@dimen/material_drawer_item_padding"
            android:text="Item Type"
            android:textColor="@color/material_drawer_primary_text"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/new_date_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/new_owner_name"
            android:text="10.10.2017"
            android:textColor="@color/material_drawer_primary_text"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/new_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Title"
            android:textStyle="bold"
            android:textColor="@color/material_drawer_primary_text"
            android:layout_below="@+id/new_item_type" />
        <ImageView
            android:id="@+id/new_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/material_drawer_item_padding"
            android:adjustViewBounds="true"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/new_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_img"
            android:layout_marginTop="@dimen/material_drawer_item_padding"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Preview"
            android:textColor="@color/material_drawer_primary_text"
            />
        <com.mikepenz.iconics.view.IconicsTextView
            android:id="@+id/ic_counters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/new_preview"
            android:layout_marginTop="@dimen/material_drawer_item_padding"
            android:textSize="16sp"
            android:text="{faw-comment}100 {faw-heart}100"
            android:textColor="@color/material_drawer_secondary_text"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>