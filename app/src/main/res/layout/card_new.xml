<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/material_drawer_item_padding">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/new_owner_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:minHeight="50dp"
            android:minWidth="50dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/new_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/material_drawer_item_padding"
            android:layout_marginStart="@dimen/material_drawer_item_padding"
            android:layout_toEndOf="@+id/new_owner_img"
            android:layout_toRightOf="@+id/new_owner_img"
            android:text="Owner Name" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/new_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/new_owner_name"
            android:layout_alignStart="@+id/new_owner_name"
            android:layout_below="@+id/new_owner_name"
            android:layout_marginTop="@dimen/material_drawer_item_padding"
            android:text="Item Type" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/new_date_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/new_owner_name"
            android:text="10.10.2017" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/new_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_owner_img"
            android:layout_marginTop="@dimen/material_drawer_item_padding"
            android:layout_centerHorizontal="true"
            android:text="Title" />
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/new_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/material_drawer_item_padding"
            android:minHeight="50dp"
            android:minWidth="50dp" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/new_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_img"
            android:layout_marginTop="@dimen/material_drawer_item_padding"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Preview"
            />
        <com.mikepenz.iconics.view.IconicsTextView
            android:id="@+id/tv_comment"
            android:text="{}defgh{faw-adjust}ijk{fon-test1}lmnopqrstuv{fon-test2}wxyz"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:textSize="16sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>